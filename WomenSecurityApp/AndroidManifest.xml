<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.glaesis.droid.security"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="com.android.vending.CHECK_LICENSE" />

    <permission
        android:name="com.glaesis.droid.security.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.glaesis.droid.security.permission.C2D_MESSAGE" />

    <application
        android:name=".SecurityApp"
        android:allowBackup="false"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <provider
            android:name="com.glaesis.droid.security.database.SecurityContentProvider"
            android:authorities="com.glaesis.droid.security.database.contentprovider"
            android:exported="false" />

        <activity
            android:name=".activities.FacebookLoginActivty"
            android:label="@string/app_name"  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/app_name" >
        </activity>
        <activity android:name=".activities.FetchContactsActivity" />
        <activity android:name=".activities.DummyActivity" />
        <activity
            android:name="group.pals.android.lib.ui.lockpattern.LockPatternActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|keyboard"
            android:screenOrientation="user"
            android:theme="@style/Alp.Theme.Dialog.Dark" />
        <activity
            android:name=".lock.LockScreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize|keyboard"
            android:screenOrientation="user" />

        <receiver
            android:name="com.google.android.gcm.GCMBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>

                <!-- Receives the actual messages. -->
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <!-- Receives the registration id. -->
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="com.glaesis.droid.security" />
            </intent-filter>
        </receiver>
        <receiver android:name=".widget.WidgetProvider" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_provider" />
        </receiver>
        <receiver
            android:name=".widget.WidgetIntentReceiver"
            android:label="widgetBroadcastReceiver" >
            <intent-filter>
                <action android:name="womansecurity.intent.action.ALERT_FRIENDS_AND_COP" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_provider" />
        </receiver>

        <service android:name=".service.GSGCMIntentService" />
        <service android:name=".service.LocationAlarmService" />

        <activity android:name=".activities.SelectedContactsListActivity" />
        <activity
            android:name="com.facebook.LoginActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name=".activities.PickerActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".activities.FBFriendListActivity"
            android:label="@string/app_name" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />
    </application>

</manifest>