<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    
     <style name="Alp.BaseTheme.Dark" parent="@android:style/Theme" />

    <style name="Alp.BaseThemeHelper.Dark" parent="@style/Alp.BaseTheme.Dark" />

    <style name="Alp.Theme.Dark" parent="@style/Alp.BaseThemeHelper.Dark">

        <!-- AOSP -->

        <item name="android:windowBackground">@drawable/aosp_background_holo_dark</item>

        <!-- android-lockpattern -->

        <item name="alp_theme_dialog">@style/Alp.Theme.Dialog.Dark</item>
        <item name="alp_drawable_btn_code_lock_default_holo">@drawable/alp_btn_code_lock_default_holo_light</item>
        <item name="alp_drawable_btn_code_lock_touched_holo">@drawable/alp_btn_code_lock_touched_holo_light</item>
        <item name="alp_drawable_indicator_code_lock_point_area_default_holo">@drawable/alp_indicator_code_lock_point_area_default_holo_light</item>
        <item name="alp_color_pattern_path">@color/alp_pattern_path_light</item>
        <item name="aosp_drawable_indicator_code_lock_point_area_normal">@drawable/aosp_indicator_code_lock_point_area_green_holo</item>
    </style>

    <style name="Alp.BaseTheme.Light" parent="@android:style/Theme.Light" />

    <style name="Alp.BaseThemeHelper.Light" parent="@style/Alp.BaseTheme.Light" />

    <style name="Alp.Theme.Light" parent="@style/Alp.BaseThemeHelper.Light">

        <!-- AOSP -->

        <item name="android:windowBackground">@drawable/aosp_background_holo_light</item>

        <!-- android-lockpattern -->

        <item name="alp_theme_dialog">@style/Alp.Theme.Dialog.Light</item>
        <item name="alp_drawable_btn_code_lock_default_holo">@drawable/alp_btn_code_lock_default_holo_dark</item>
        <item name="alp_drawable_btn_code_lock_touched_holo">@drawable/alp_btn_code_lock_touched_holo_dark</item>
        <item name="alp_drawable_indicator_code_lock_point_area_default_holo">@drawable/alp_indicator_code_lock_point_area_default_holo_dark</item>
        <item name="alp_color_pattern_path">@color/alp_pattern_path_dark</item>
        <item name="aosp_drawable_indicator_code_lock_point_area_normal">@drawable/aosp_indicator_code_lock_point_area_blue_holo</item>
    </style>

    <style name="Alp.BaseTheme.Dialog.Dark" parent="@android:style/Theme.Dialog">

        <!-- AOSP -->

        <item name="android:windowBackground">@drawable/aosp_dialog_full_holo_dark</item>
    </style>

    <style name="Alp.BaseThemeHelper.Dialog.Dark" parent="@style/Alp.BaseTheme.Dialog.Dark" />

    <style name="Alp.Theme.Dialog.Dark" parent="@style/Alp.BaseThemeHelper.Dialog.Dark">

        <!-- android-lockpattern -->

        <item name="alp_theme_dialog">@style/Alp.Theme.Dialog.Dark</item>
        <item name="alp_drawable_btn_code_lock_default_holo">@drawable/alp_btn_code_lock_default_holo_light</item>
        <item name="alp_drawable_btn_code_lock_touched_holo">@drawable/alp_btn_code_lock_touched_holo_light</item>
        <item name="alp_drawable_indicator_code_lock_point_area_default_holo">@drawable/alp_indicator_code_lock_point_area_default_holo_light</item>
        <item name="alp_color_pattern_path">@color/alp_pattern_path_light</item>
        <item name="aosp_drawable_indicator_code_lock_point_area_normal">@drawable/aosp_indicator_code_lock_point_area_green_holo</item>
    </style>

    <style name="Alp.BaseTheme.Dialog.Light" parent="@android:style/Theme.Light">

        <!-- AOSP -->

        <item name="android:windowFrame">@null</item>
        <item name="android:windowTitleStyle">@style/AOSP_DialogWindowTitle</item>
        <item name="android:windowBackground">@drawable/aosp_dialog_full_holo_light</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="Alp.BaseThemeHelper.Dialog.Light" parent="@style/Alp.BaseTheme.Dialog.Light" />

    <style name="Alp.Theme.Dialog.Light" parent="@style/Alp.BaseThemeHelper.Dialog.Light">

        <!-- android-lockpattern -->

        <item name="alp_theme_dialog">@style/Alp.Theme.Dialog.Light</item>
        <item name="alp_drawable_btn_code_lock_default_holo">@drawable/alp_btn_code_lock_default_holo_dark</item>
        <item name="alp_drawable_btn_code_lock_touched_holo">@drawable/alp_btn_code_lock_touched_holo_dark</item>
        <item name="alp_drawable_indicator_code_lock_point_area_default_holo">@drawable/alp_indicator_code_lock_point_area_default_holo_dark</item>
        <item name="alp_color_pattern_path">@color/alp_pattern_path_dark</item>
        <item name="aosp_drawable_indicator_code_lock_point_area_normal">@drawable/aosp_indicator_code_lock_point_area_blue_holo</item>
    </style>

    <style name="AOSP_DialogWindowTitle">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@android:style/TextAppearance.DialogWindowTitle</item>
    </style>

    <item name="alp_button_bar_style" type="style">@null</item>
    <item name="alp_button_bar_button_style" type="style">@null</item>

    <attr name="alp_button_bar_style" format="reference" />
    <attr name="alp_button_bar_button_style" format="reference" />
    <attr name="alp_theme_dialog" format="reference" />
    

</resources>
