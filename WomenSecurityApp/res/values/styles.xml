<resources xmlns:android="http://schemas.android.com/apk/res/android">

    
     <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/ActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@color/actionbar_color</item>
        <!-- Support library compatibility -->
        <item name="background">@color/actionbar_color</item>
    
        <item name="android:titleTextStyle">@style/ActionBarTitleText</item>
        <!-- Support library compatibility -->
        <item name="titleTextStyle">@style/ActionBarTitleText</item>
        <!-- -action menu text apperance -->
        <item name="android:actionMenuTextAppearance">@style/MyActionBar.MenuTextStyle</item>
         <!-- -action menu text apperance suport -->
        <item name="actionMenuTextAppearance">@style/MyActionBar.MenuTextStyle</item>
    </style>

    <!-- ActionBar title text -->
    <style name="ActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">

        <!-- The textColor property is backward compatible with the Support Library -->
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyActionBar.MenuTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textColor">#F0F</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24dip</item>
    </style>
    
   
   

    <style name="Alp.Theme.Light" parent="@style/CustomActionBarTheme">

        <!-- AOSP -->

        <item name="android:windowBackground">@drawable/aosp_background_holo_light</item>

        <!-- android-lockpattern -->

      
        <item name="alp_drawable_btn_code_lock_default_holo">@drawable/alp_btn_code_lock_default_holo_dark</item>
        <item name="alp_drawable_btn_code_lock_touched_holo">@drawable/alp_btn_code_lock_touched_holo_dark</item>
        <item name="alp_drawable_indicator_code_lock_point_area_default_holo">@drawable/alp_indicator_code_lock_point_area_default_holo_dark</item>
        <item name="alp_color_pattern_path">@color/alp_pattern_path_dark</item>
        <item name="aosp_drawable_indicator_code_lock_point_area_normal">@drawable/aosp_indicator_code_lock_point_area_blue_holo</item>
    </style>
 
    <style name="settings_bold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FF636363</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="customFont">Roboto-Bold</item>
    </style>

    <style name="settings_bold.des">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="settings_normal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FF606060</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="customFont">Roboto-Regular</item>
    </style>

    <style name="settings_normal.des">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#FF585858</item>
    </style>

    <style name="login_bold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFB43535</item>
        <item name="android:textStyle">bold</item>
        <item name="customFont">Roboto-Bold</item>
    </style>

    <style name="login_bold.normal">
        <item name="android:textColor">#FF878787</item>
        <item name="android:textStyle">normal</item>
        <item name="customFont">Roboto-Regular</item>
    </style>

    <item name="alp_button_bar_style" type="style">@null</item>
    <item name="alp_button_bar_button_style" type="style">@null</item>

    <attr name="alp_button_bar_style" format="reference" />
    <attr name="alp_button_bar_button_style" format="reference" />
    <attr name="alp_theme_dialog" format="reference" />

</resources>