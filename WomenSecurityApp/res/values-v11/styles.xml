<resources>

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!-- API 11 theme customizations can go here. -->
    </style>
    
    
    
    
    <style name="Alp.BaseTheme.Dark" parent="@android:style/Theme.Holo" />

    <style name="Alp.BaseThemeHelper.Dark" parent="@style/Alp.BaseTheme.Dark">
        <item name="alp_button_bar_style">?android:attr/buttonBarStyle</item>
        <item name="alp_button_bar_button_style">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="Alp.BaseTheme.Light" parent="@android:style/Theme.Holo.Light" />

    <style name="Alp.BaseThemeHelper.Light" parent="@style/Alp.BaseTheme.Light">
        <item name="alp_button_bar_style">?android:attr/buttonBarStyle</item>
        <item name="alp_button_bar_button_style">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="Alp.BaseTheme.Dialog.Dark" parent="@android:style/Theme.Holo.Dialog" />

    <style name="Alp.BaseThemeHelper.Dialog.Dark" parent="@style/Alp.BaseTheme.Dialog.Dark">
        <item name="alp_button_bar_style">?android:attr/buttonBarStyle</item>
        <item name="alp_button_bar_button_style">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="Alp.BaseTheme.Dialog.Light" parent="@android:style/Theme.Holo.Light.Dialog" />

    <style name="Alp.BaseThemeHelper.Dialog.Light" parent="@style/Alp.BaseTheme.Dialog.Light">
        <item name="alp_button_bar_style">?android:attr/buttonBarStyle</item>
        <item name="alp_button_bar_button_style">?android:attr/buttonBarButtonStyle</item>
    </style>
    

</resources>
